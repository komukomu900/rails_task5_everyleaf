<h1>作成</h1>
<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
    <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :タスク名 %>
    <%= form.text_field :name, placeholder: "タスク名" %>
  </div>
  <div>
    <%= form.label :タスク内容 %>
    <%= form.text_field :content, placeholder: "タスク内容" %>
  </div>
  <div>
    <%= form.label :タスクの状態 %>
    <%= form.select :state, {"未着手":"未着手", "着手":"着手", "完了":"完了"}, {include_blank: '選択してください'} %>
  </div>
  <div>
    <%= form.label :タスクの終了期限 %>
    <%= form.datetime_field :deadline, placeholder: "タスクの終了期限" %>
  </div>
  <%= form.submit "作成" %>
<% end %>
<%= link_to 'タスク一覧', tasks_path %>