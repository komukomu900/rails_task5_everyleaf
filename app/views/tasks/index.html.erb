<h1>タスク一覧</h1>
<div><%= link_to '新規作成', new_task_path %></div>
  <table>
    <tr>
      <th>タスク名</th>
      <th>タスク内容</th>
      <th>タスクの状態</th>
      <th>タスクの締め切り</th>
    </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.content %></td>
      <td><%= task.state %></td>
      <td><%= task.deadline %></td>
      <td><%= link_to '詳細', task_path(task.id) %></td>
      <td><%= link_to "編集", edit_task_path(task.id) %></td>
      <td><%= link_to "削除", task_path(task.id), method: :delete, data:{confirm: '本当に削除しますか？'} %></td>
    </tr>
  <% end %>
  </table>