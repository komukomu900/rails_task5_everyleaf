<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @user, url: admin_users_path, local: true do |f| %>
  <div>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "ユーザー名" %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "メールアドレス" %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "パスワード" %>
    </div>
    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: "パスワード確認" %>
    </div>
    <%= f.submit "作成" %>
  </div>
<% end %>